{% trans_default_domain 'SymkitSearchBundle' %}

<div {{ attributes.defaults(stimulus_controller('search--global-search-modal', {
    open: this.isOpen
})) }} class="flex flex-1">
    <search class="relative flex flex-1">
        <label for="global-search-trigger" class="sr-only">{{ 'search.label'|trans }}</label>
        {{ ux_icon('heroicons-outline:magnifying-glass', {class: 'pointer-events-none absolute inset-y-0 left-0 h-full w-5 text-gray-400'}) }}
        <input
            id="global-search-trigger"
            type="text"
            placeholder="{{ 'search.placeholder'|trans }}"
            class="block h-full w-full border-0 py-0 pl-8 pr-0 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm dark:bg-gray-900 dark:text-white"
            data-model="query"
            data-action="focus->live#action click->live#action input->live#action"
            data-live-action-param="open"
            autocomplete="off"
            data-search--global-search-modal-target="trigger"
        >
        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <kbd class="hidden sm:inline-flex items-center gap-1 rounded border border-gray-200 px-2 py-0.5 text-xs font-sans text-gray-400 dark:border-gray-700">
                <span class="text-xs">⌘</span>K
            </kbd>
        </div>
    </search>

    {% if this.isOpen %}
    <div
        class="fixed inset-0 z-50 overflow-y-auto"
        data-search--global-search-modal-target="backdrop"
    >
        <div
            class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity dark:bg-gray-900 dark:bg-opacity-75"
            data-action="click->live#action"
            data-live-action-param="close"
        ></div>

        <div class="flex min-h-full items-start justify-center p-4 text-center sm:p-0">
            <div class="relative mt-20 w-full max-w-2xl transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all dark:bg-gray-800">
                <div class="border-b border-gray-200 dark:border-gray-700">
                    <div class="flex items-center px-4">
                        {{ ux_icon('heroicons-outline:magnifying-glass', {class: 'h-5 w-5 text-gray-400'}) }}
                        <input
                            type="text"
                            data-model="debounce(300)|min_length(2)|query"
                            placeholder="{{ 'search.modal.placeholder'|trans }}"
                            class="block w-full border-0 bg-transparent py-4 pl-3 pr-4 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm dark:text-white"
                            autofocus
                            autocomplete="off"
                            data-search--global-search-modal-target="input"
                            data-action="input->search--global-search-modal#resetNavigation"
                        >
                        <button
                            type="button"
                            data-action="click->live#action"
                            data-live-action-param="close"
                            class="rounded-md text-gray-400 hover:text-gray-500 focus:outline-none dark:hover:text-gray-300"
                        >
                            <span class="sr-only">{{ 'search.close'|trans }}</span>
                            {{ ux_icon('heroicons-outline:x-mark', {class: 'h-6 w-6'}) }}
                        </button>
                    </div>
                </div>

                <div class="relative max-h-96 overflow-y-auto p-2">
                    <div class="hidden absolute inset-0 z-10 flex items-center justify-center bg-white/50 backdrop-blur-[1px] dark:bg-gray-800/50" data-loading="removeClass(hidden)">
                        {{ ux_icon('heroicons-outline:arrow-path', {class: 'h-8 w-8 text-cyan-600 animate-spin dark:text-cyan-400'}) }}
                    </div>

                    <div data-loading="addClass(opacity-25)">
                        {% if this.query is empty %}
                            <div class="px-6 py-14 text-center text-sm text-gray-500 dark:text-gray-400">
                                {{ ux_icon('heroicons-outline:magnifying-glass', {class: 'mx-auto h-12 w-12 text-gray-300 dark:text-gray-600 mb-4'}) }}
                                <p>{{ 'search.empty.hint'|trans }}</p>
                            </div>
                        {% elseif not this.hasResults %}
                            <div class="px-6 py-14 text-center text-sm text-gray-500 dark:text-gray-400">
                                {{ ux_icon('heroicons-outline:magnifying-glass-circle', {class: 'mx-auto h-12 w-12 text-gray-300 dark:text-gray-600 mb-4'}) }}
                                <p class="font-medium">{{ 'search.no_results.title'|trans }}</p>
                                <p class="mt-1">{{ 'search.no_results.hint'|trans }}</p>
                            </div>
                        {% else %}
                            {% for group in this.results %}
                                <div class="mb-4">
                                    <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider dark:text-gray-400">
                                        {{ group.category }}
                                    </div>
                                    <ul class="space-y-1">
                                        {% for result in group.results %}
                                            <li>
                                                <a
                                                    href="{{ result.url }}"
                                                    class="flex items-start gap-3 rounded-md px-3 py-2.5 hover:bg-gray-50 dark:hover:bg-gray-700/50 group transition-all"
                                                    data-action="click->live#action"
                                                    data-live-action-param="close"
                                                    data-search--global-search-modal-target="result"
                                                >
                                                    <div class="flex-shrink-0 mt-0.5">
                                                        {{ ux_icon(result.icon, {class: 'h-5 w-5 text-gray-400 dark:text-gray-500'}) }}
                                                    </div>
                                                    <div class="flex-1 min-w-0">
                                                        <div class="flex items-center gap-2">
                                                            <p class="text-sm font-medium text-gray-900 dark:text-white group-hover:text-cyan-600 dark:group-hover:text-cyan-400">
                                                                {{ result.title }}
                                                            </p>
                                                            {% if result.badge %}
                                                                <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600 dark:bg-gray-700 dark:text-gray-300">
                                                                    {{ result.badge }}
                                                                </span>
                                                            {% endif %}
                                                        </div>
                                                        <p class="text-xs text-gray-500 dark:text-gray-400 truncate">
                                                            {{ result.subtitle }}
                                                        </p>
                                                    </div>
                                                    <div class="flex-shrink-0">
                                                        {{ ux_icon('heroicons-outline:arrow-top-right-on-square', {class: 'h-4 w-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity'}) }}
                                                    </div>
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <div class="border-t border-gray-200 px-4 py-3 dark:border-gray-700">
                    <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400">
                        <div class="flex items-center gap-4">
                            <span class="flex items-center gap-1">
                                <kbd class="rounded border border-gray-300 px-1.5 py-0.5 font-mono dark:border-gray-600">↑</kbd>
                                <kbd class="rounded border border-gray-300 px-1.5 py-0.5 font-mono dark:border-gray-600">↓</kbd>
                                {{ 'search.keyboard.navigate'|trans }}
                            </span>
                            <span class="flex items-center gap-1">
                                <kbd class="rounded border border-gray-300 px-1.5 py-0.5 font-mono dark:border-gray-600">↵</kbd>
                                {{ 'search.keyboard.select'|trans }}
                            </span>
                        </div>
                        <span class="flex items-center gap-1">
                            <kbd class="rounded border border-gray-300 px-1.5 py-0.5 font-mono dark:border-gray-600">ESC</kbd>
                            {{ 'search.keyboard.close'|trans }}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
